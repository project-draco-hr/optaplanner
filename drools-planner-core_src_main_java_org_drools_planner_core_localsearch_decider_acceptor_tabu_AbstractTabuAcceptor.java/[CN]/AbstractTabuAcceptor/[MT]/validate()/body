{
  if (tabuSize < 0) {
    throw new IllegalArgumentException("The tabuSize (" + tabuSize + ") cannot be negative.");
  }
  if (partialTabuSize < 0) {
    throw new IllegalArgumentException("The partialTabuSize (" + partialTabuSize + ") cannot be negative.");
  }
  if (tabuSize + partialTabuSize == 0) {
    throw new IllegalArgumentException("The sum of tabuSize and partialTabuSize should be at least 1.");
  }
}
