{
  if (startingTemperature < 0.0) {
    throw new IllegalArgumentException("The startingTemperature (" + startingTemperature + ") cannot be negative.");
  }
  if (startingTemperature < temperatureMinimum) {
    throw new IllegalArgumentException("The startingTemperature (" + startingTemperature + ") cannot be less than the temperatureMinimum ("+ temperatureMinimum+ ").");
  }
  temperature=startingTemperature;
}
