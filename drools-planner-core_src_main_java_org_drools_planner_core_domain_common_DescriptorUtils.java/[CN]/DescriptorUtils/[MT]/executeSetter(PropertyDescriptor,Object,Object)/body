{
  try {
    propertyDescriptor.getWriteMethod().invoke(bean,value);
  }
 catch (  IllegalAccessException e) {
    throw new IllegalStateException("Cannot call property (" + propertyDescriptor.getName() + ") setter on bean of class ("+ bean.getClass()+ ").",e);
  }
catch (  InvocationTargetException e) {
    throw new IllegalStateException("The property (" + propertyDescriptor.getName() + ") setter on bean of class ("+ bean.getClass()+ ") throws an exception.",e.getCause());
  }
}
