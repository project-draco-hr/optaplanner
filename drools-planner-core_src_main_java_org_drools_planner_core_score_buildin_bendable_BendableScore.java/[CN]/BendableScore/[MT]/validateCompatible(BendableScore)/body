{
  if (getHardLevelCount() != other.getHardLevelCount()) {
    throw new IllegalArgumentException("The score (" + this + ") with hardScoreSize ("+ getHardLevelCount()+ ") is not compatible with the other score ("+ other+ ") with hardScoreSize ("+ other.getHardLevelCount()+ ").");
  }
  if (getSoftLevelCount() != other.getSoftLevelCount()) {
    throw new IllegalArgumentException("The score (" + this + ") with softScoreSize ("+ getSoftLevelCount()+ ") is not compatible with the other score ("+ other+ ") with softScoreSize ("+ other.getSoftLevelCount()+ ").");
  }
}
