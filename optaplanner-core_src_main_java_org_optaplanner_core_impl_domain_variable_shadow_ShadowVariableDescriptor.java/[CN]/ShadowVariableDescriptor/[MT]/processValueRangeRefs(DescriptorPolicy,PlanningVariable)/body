{
  String[] valueRangeRefs=planningVariableAnnotation.valueRangeProviderRefs();
  if (!ArrayUtils.isEmpty(valueRangeRefs)) {
    throw new IllegalArgumentException("The planningEntityClass (" + entityDescriptor.getPlanningEntityClass() + ") has shadow PlanningVariable annotated property ("+ variablePropertyAccessor.getName()+ ") with mappedBy ("+ planningVariableAnnotation.mappedBy()+ ") which has a non-empty valueRangeProviderRefs ("+ Arrays.toString(valueRangeRefs)+ ").");
  }
}
