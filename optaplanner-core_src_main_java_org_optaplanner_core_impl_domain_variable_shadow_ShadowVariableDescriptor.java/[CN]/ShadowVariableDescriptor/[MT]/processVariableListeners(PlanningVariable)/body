{
  Class<? extends PlanningVariableListener>[] variableListenerClasses=planningVariableAnnotation.variableListenerClasses();
  if (variableListenerClasses.length != 0) {
    throw new IllegalArgumentException("The planningEntityClass (" + entityDescriptor.getPlanningEntityClass() + ") has shadow PlanningVariable annotated property ("+ variablePropertyAccessor.getName()+ ") with mappedBy ("+ planningVariableAnnotation.mappedBy()+ ") which also has variableListenerClasses ("+ variableListenerClasses+ ").");
  }
}
