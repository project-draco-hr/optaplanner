{
  Matcher matcher=pattern.matcher(resumeDir.getName());
  if (matcher.find()) {
    try {
      return dateFormat.parse(matcher.group());
    }
 catch (    ParseException ex) {
      throw new IllegalStateException("Error while parsing resume directory name (" + resumeDir.getName() + ").");
    }
  }
  throw new IllegalArgumentException("Resume directory name (" + resumeDir + ")"+ " does not follow naming convention - identifying timestamp 'yyyy-MM-dd_HHmmss'"+ " is missing.");
}
