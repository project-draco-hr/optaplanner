{
  Desktop desktop=Desktop.getDesktop();
  try {
switch (action) {
case OPEN:
{
        if (desktop.isSupported(Desktop.Action.OPEN)) {
          desktop.open(file);
        }
        break;
      }
case BROWSE:
{
      if (desktop.isSupported(Desktop.Action.BROWSE)) {
        desktop.browse(file.toURI());
      }
    }
}
}
 catch (IOException ex) {
throw new IllegalStateException(ex);
}
}
