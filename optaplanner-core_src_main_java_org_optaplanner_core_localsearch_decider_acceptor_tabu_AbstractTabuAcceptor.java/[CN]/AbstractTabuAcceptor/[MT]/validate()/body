{
  if (tabuSize < 0) {
    throw new IllegalArgumentException("The tabuSize (" + tabuSize + ") cannot be negative.");
  }
  if (fadingTabuSize < 0) {
    throw new IllegalArgumentException("The fadingTabuSize (" + fadingTabuSize + ") cannot be negative.");
  }
  if (tabuSize + fadingTabuSize == 0) {
    throw new IllegalArgumentException("The sum of tabuSize and fadingTabuSize should be at least 1.");
  }
}
