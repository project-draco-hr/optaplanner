{
  if (hardScores.length != hardScoresSize) {
    throw new IllegalArgumentException("The hardScores (" + Arrays.toString(hardScores) + ")'s length ("+ hardScores.length+ ") is not hardScoresSize ("+ hardScoresSize+ ").");
  }
  if (softScores.length != softScoresSize) {
    throw new IllegalArgumentException("The softScores (" + Arrays.toString(softScores) + ")'s length ("+ softScores.length+ ") is not softScoresSize ("+ softScoresSize+ ").");
  }
  return new BendableScore(hardScores,softScores);
}
