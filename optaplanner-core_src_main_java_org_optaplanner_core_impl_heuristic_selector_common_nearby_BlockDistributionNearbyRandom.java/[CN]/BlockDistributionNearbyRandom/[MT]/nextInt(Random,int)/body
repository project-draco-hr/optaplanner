{
  if (uniformDistributionProbability > 0.0) {
    if (random.nextDouble() < uniformDistributionProbability) {
      return random.nextInt(n);
    }
  }
  int size;
  if (sizeRatio < 1.0) {
    size=(int)(n * sizeRatio);
    if (size < sizeMinimum) {
      size=sizeMinimum;
      if (size > n) {
        size=n;
      }
    }
  }
 else {
    size=n;
  }
  if (size > sizeMaximum) {
    size=sizeMaximum;
  }
  return random.nextInt(size);
}
