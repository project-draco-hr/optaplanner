{
  chained=planningVariableAnnotation.chained();
  if (chained && !variablePropertyAccessor.getPropertyType().isAssignableFrom(entityDescriptor.getPlanningEntityClass())) {
    throw new IllegalArgumentException("The planningEntityClass (" + entityDescriptor.getPlanningEntityClass() + ") has a PlanningVariable annotated property ("+ variablePropertyAccessor.getName()+ ") with chained ("+ chained+ ") and propertyType ("+ variablePropertyAccessor.getPropertyType()+ ") which is not a superclass/interface of or the same as the planningEntityClass ("+ entityDescriptor.getPlanningEntityClass()+ ").");
  }
  if (chained && nullable) {
    throw new IllegalArgumentException("The planningEntityClass (" + entityDescriptor.getPlanningEntityClass() + ") has a PlanningVariable annotated property ("+ variablePropertyAccessor.getName()+ ") with chained ("+ chained+ "), which is not compatible with nullable ("+ nullable+ ").");
  }
}
