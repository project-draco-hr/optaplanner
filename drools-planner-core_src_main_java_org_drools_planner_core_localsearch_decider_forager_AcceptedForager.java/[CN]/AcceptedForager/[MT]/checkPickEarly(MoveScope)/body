{
switch (pickEarlyType) {
case NEVER:
    break;
case FIRST_BEST_SCORE_IMPROVING:
  if (moveScope.getLocalSearchStepScope().getDeciderScoreComparator().compare(moveScope.getScore(),moveScope.getLocalSearchStepScope().getLocalSearchSolverScope().getBestScore()) > 0) {
    earlyPickedMoveScope=moveScope;
  }
break;
case FIRST_LAST_STEP_SCORE_IMPROVING:
if (moveScope.getLocalSearchStepScope().getDeciderScoreComparator().compare(moveScope.getScore(),moveScope.getLocalSearchStepScope().getLocalSearchSolverScope().getLastCompletedLocalSearchStepScope().getScore()) > 0) {
earlyPickedMoveScope=moveScope;
}
break;
default :
throw new IllegalStateException("The pickEarlyType (" + pickEarlyType + ") is not implemented");
}
}
