{
switch (pickEarlyByScore) {
case NONE:
    break;
case FIRST_BEST_SCORE_IMPROVING:
  if (moveScope.getStepScope().getDeciderScoreComparator().compare(moveScope.getScore(),moveScope.getStepScope().getLocalSearchSolverScope().getBestScore()) > 0) {
    earlyPickedMoveScope=moveScope;
  }
break;
case FIRST_LAST_STEP_SCORE_IMPROVING:
if (moveScope.getStepScope().getDeciderScoreComparator().compare(moveScope.getScore(),moveScope.getStepScope().getLocalSearchSolverScope().getLastCompletedStepScope().getScore()) > 0) {
earlyPickedMoveScope=moveScope;
}
break;
default :
throw new IllegalStateException("The pickEarlyByScore (" + pickEarlyByScore + ") is not implemented");
}
}
