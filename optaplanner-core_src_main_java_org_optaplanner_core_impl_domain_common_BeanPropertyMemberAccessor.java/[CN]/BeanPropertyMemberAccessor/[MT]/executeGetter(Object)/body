{
  try {
    return readMethod.invoke(bean);
  }
 catch (  IllegalAccessException e) {
    throw new IllegalStateException("Cannot call property (" + propertyDescriptor.getName() + ") getter on bean of class ("+ bean.getClass()+ ").",e);
  }
catch (  InvocationTargetException e) {
    throw new IllegalStateException("The property (" + propertyDescriptor.getName() + ") getter on bean of class ("+ bean.getClass()+ ") throws an exception.",e.getCause());
  }
}
