{
  String line=bufferedReader.readLine();
  if (line == null) {
    throw new IllegalArgumentException("File ends before a line is expected to be a regex (" + regex + ").");
  }
  String value=line.trim();
  if (!value.matches(regex)) {
    throw new IllegalArgumentException("Read line (" + line + ") is expected to be a regex ("+ regex+ ").");
  }
}
