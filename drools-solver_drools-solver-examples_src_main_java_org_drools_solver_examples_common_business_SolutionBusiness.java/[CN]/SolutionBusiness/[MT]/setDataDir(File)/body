{
  unsolvedDataDir=new File(dataDir,"unsolved");
  if (!unsolvedDataDir.exists()) {
    throw new IllegalStateException("The directory unsolvedDataDir (" + unsolvedDataDir.getAbsolutePath() + ") does not exist. The working directory should be set to drools-solver-examples.");
  }
  solvedDataDir=new File(dataDir,"solved");
  if (!solvedDataDir.exists()) {
    throw new IllegalStateException("The directory solvedDataDir (" + solvedDataDir.getAbsolutePath() + ") does not exist. The working directory should be set to drools-solver-examples.");
  }
}
