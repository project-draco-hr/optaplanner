{
  for (  Field field : clazz.getDeclaredFields()) {
    field.setAccessible(true);
    try {
      Object originalValue=field.get(original);
      field.set(clone,originalValue);
    }
 catch (    IllegalAccessException e) {
      throw new IllegalStateException("The class (" + clazz + ") has a field ("+ field+ ") which could not be accessed to create a clone.",e);
    }
  }
  Class<? super C> superclass=clazz.getSuperclass();
  if (superclass != null) {
    shallowCopyFields(superclass,original,clone);
  }
}
